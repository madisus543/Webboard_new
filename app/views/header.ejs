<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Web Board System</title>
  
  <!-- Import Bootstrap -->
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  <!-- import icon -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <!-- import font -->
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Kanit&family=Prompt:wght@200;300&display=swap');
    * {
      font-family: 'Prompt';
    }
    .material-icons {
      display: inline-flex;
      vertical-align: text-bottom;
    }
    .header {

    }
    .footer {
      background-color: aquamarine;
      text-align: center;
      padding: 20px;
      margin-top: 20px;
    }
  </style>
  </head>
  <body>
    <div class="header">
      <div class="h3">Webboard Online</div>
      <div>
        <a class="btn btn-primary" href="/">
          Home
        </a>  
        <a class="btn btn-primary" href="/board">
          Board
        </a>
        <% if(session.user_id == undefined ) { %>
          <a class="btn btn-primary" href="/login">
            Login
          </a>
          <a class="btn btn-primary" href="/register">
            Register
          </a>
          <% } else { %>
          <a class="btn btn-danger" href="/logout">
            Logout
          </a>
          <label> User: <%= session.name_id %></label>
          <% } %>
      </div>
    </div>